@model IEnumerable<Hana.Models.UserProfile>

<div class="container mt-4">
    <h2 class="mb-4">Matched Users</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            @(ViewBag.Message ?? "No users found matching your criteria.")
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var user in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">@user.Name</h5>
                            <p class="card-text">
                                <strong>Age:</strong> @user.Age<br />
                                <strong>Gender:</strong> @user.Gender<br />
                                <strong>Nationality:</strong> @user.Nationality<br />
                                <strong>Languages:</strong><br />
                                Speaks: @user.SpeakLanguage<br />
                                Learning: @user.LearnLanguage
                            </p>
                            @if (!string.IsNullOrEmpty(user.InstagramAccount))
                            {
                                <p class="card-text">
                                    <strong>Instagram:</strong> @user.InstagramAccount
                                </p>
                            }
                            @if (!string.IsNullOrEmpty(user.Bio))
                            {
                                <p class="card-text">
                                    <strong>Bio:</strong> @user.Bio
                                </p>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }

    <div class="mt-4">
        <a asp-action="SearchForm" class="btn btn-primary">Back to Search</a>
    </div>
</div>
